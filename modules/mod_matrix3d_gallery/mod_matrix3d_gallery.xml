<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
	<name>mod_matrix3d_gallery</name>
	<author>Webpsilon</author>
	<creationDate>2009</creationDate>
	<copyright>Copyright (C) 2009 Webpsilon</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.webpsilon.com/joomla-extensions</authorUrl>
	<version>1.1.0</version>
	<description>Active and edit mod_matrix3d_gallery module. Configure the images folder, module height, width, border, colors and THE IMAGES SIZES, TITLES, LINKS AND SPEED. www.webpsilon.com/joomla-extensions/</description>
	<files>
	<filename module="mod_matrix3d_gallery">mod_matrix3d_gallery.php</filename>
	 <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
		<filename>tmpl/mod_flash_rotator.swf</filename>
		<filename>inc/a.css</filename>
		<filename>inc/shadowbox.css</filename>
		<filename>inc/swfobject.js</filename>
		<filename>inc/jquery.js</filename>
		<filename>inc/shadowbox-jquery.js</filename>
		<filename>inc/shadowbox.js</filename>
		<filename>images/loading.gif</filename>
		<filename>images/close.png</filename>
		<filename>images/next.png</filename>
		<filename>images/pause.png</filename>
		<filename>images/previous.png</filename>
	</files>
	<params>


		
		<param name="folder" type="text" default="images/stories/" label="Images Folder: Sample images/stories/" description="Sample: images/stories/" />
				<param name="width" type="text" default="100%" label="Width: Number with px or %, sample 100%" description="width ex: 500px" />
		
		<param name="height" type="text" default="300px" label="Height: Number with px, sample 400px" description="height ex: 400px" />
				<param name="background" type="text" default="" label="background color" description="background color format: ffffff" />
				
				<param name="imageb" type="text" default="" label="Url Image background" description="Url Image background, sample: images/background.jpg" />	
				<param name="border" type="text" default="4" label="border" description="border" />
		<param name="bordercolor" type="text" default="bbbbbb" label="border color" description="border color" />
		<param name="row" type="text" default="2" label="Row: 1-4 recomended" description="Number  1-5" />
		<param name="speed" type="text" default="1" label="Speed: Less 5 Recomended" description="Number  0,10" />
<param name="zoom1" type="text" default="100" label="IMAGES SIZE" description="Number > 0, sample: 100" />
<param name="zoom2" type="text" default="5" label="Images separation Y" description="Images separation in Y axis" />

		
		<param name="onlink" type="list" default="0" label="Image LightBox" description="LightBox to click image">
			<option value="1">non</option>
			<option value="0">yes</option>
			
		</param>
		<param name="vertical" type="list" default="1" label="Carousel Style" description="Carousel Style">
			<option value="1">Viewer in centre</option>
			<option value="0">Viewer out</option>
			
		</param>
		
		<param name="mouseover" type="list" default="1" label="Mouse over images effect" description="Mouse over images effect">
			
			<option value="0">Any one</option>
			<option value="1">Y Rotation</option>
			<option value="2">X Rotation</option>
			<option value="3">Scale</option>
			<option value="4">Alpha</option>
			
		</param>
			
<param name="alpha" type="text" default="5" label="Text Images separation Y" description="Separation text with Image. Number" />

<param name="menu1" type="text" default="0" label="Images border" description="Number >= 0, sample: 2" />	
<param name="menu2" type="text" default="000000" label="Images border color" description="Sample black: 000000" />	
<param name="menu3" type="text" default="0" label="Texts border" description="Number >= 0, sample: 2" />	
<param name="menu4" type="text" default="000000" label="Texts border color" description="Sample black: 000000" />	
<param name="menu5" type="text" default="Arial" label="Text Font" description="Samples: Arial, Verdana, ..." />	
<param name="menu6" type="text" default="12" label="Font Size" description="Font Size, sample: 12" />	
<param name="menu7" type="text" default="000000" label="Font Color" description="Font color, sample white: ffffff" />	
<param name="target" type="text" default="_blank" label="target" description="_blank, _self, _this" />	


		<param name="menulinks" type="textarea" cols="40" rows="5" default="" label="Images titles: Separates by INTRO" description="Images titles separates INTRO" />
				<param name="imagesc" type="textarea" cols="40" rows="5" default="" label="Images urls link: Separates by INTRO" description="text for the link images, separated by INTRO" />
		

		
	</params>
</install>
