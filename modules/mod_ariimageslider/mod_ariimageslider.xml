<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="module" method="upgrade">
	<name>ARI Image Slider</name>
	<author>ARI Soft</author>
	<creationDate>March 2011</creationDate>
	<copyright>ARI Soft</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@ari-soft.com</authorEmail>
	<authorUrl>www.ari-soft.com</authorUrl>
	<version>1.5.5</version>
	<description>ARI_IMAGE_SLIDER_MODULE</description>
	<files>
		<filename module="mod_ariimageslider">mod_ariimageslider.php</filename>
		<filename>index.html</filename>
		<filename>ariimageslider.ini</filename>
		<folder>mod_ariimageslider/</folder>
		<folder>tmpl/</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_ariimageslider.ini</language>
		<language tag="fa-IR">language/fa-IR/fa-IR.mod_ariimageslider.ini</language>
		<language tag="pt-BR">language/pt-BR/pt-BR.mod_ariimageslider.ini</language>
	</languages>
	<params addpath="/modules/mod_ariimageslider/mod_ariimageslider/elements">
		<param name="includeJQuery" type="list" default="1" label="AIM_INCJQUERY_LABEL" description="AIM_INCJQUERY_DESCR">
  			<option value="0">AIM_NO</option> 
  			<option value="1">AIM_YES</option> 
  		</param>
  		<param name="jQueryVer" type="list" default="1.4.4" label="AIM_JQUERYVER_LABEL" description="AIM_JQUERYVER_DESCR">
  			<option value="1.3.0">1.3.0</option> 
  			<option value="1.3.1">1.3.1</option>
  			<option value="1.3.2">1.3.2</option>
  			<option value="1.4.0">1.4.0</option>
  			<option value="1.4.1">1.4.1</option>
  			<option value="1.4.2">1.4.2</option>
  			<option value="1.4.3">1.4.3</option>
  			<option value="1.4.4">1.4.4</option>
  			<option value="1.5.0">1.5.0</option>
  			<option value="1.5.1">1.5.1</option>
  		</param>
		<param name="noConflict" type="list" default="1" label="AIM_NOCONFLICT_LABEL" description="AIM_NOCONFLICT_DESCR">
  			<option value="0">AIM_NO</option> 
  			<option value="1">AIM_YES</option> 
  		</param>
  		<param name="moduleclass_sfx" type="text" default="" label="AIM_CLASSSUFFIX_LABEL" description="PARAMMODULECLASSSUFFIX" />
  		<param name="width" type="text" size="5" default="300" label="AIM_WIDTH_LABEL" description="AIM_WIDTH_DESCR" />
  		<param name="height" type="text" size="5" default="220" label="AIM_HEIGHT_LABEL" description="AIM_HEIGHT_DESCR" />
  		<param name="linkTarget" type="list" default="_self" label="AIM_LINKTARGET_LABEL" description="AIM_LINKTARGET_DESCR">
  			<option value="_blank">AIM_TARGET_BLANK</option>
			<option value="_self">AIM_TARGET_SELF</option>
			<option value="_parent">AIM_TARGET_PARENT</option>
			<option value="_top">AIM_TARGET_TOP</option>
  		</param>
  		<param name="theme" type="folderlist" default="default" directory="modules/mod_ariimageslider/mod_ariimageslider/js/themes" hide_none="1" label="AIM_THEME_LABEL" description="AIM_THEME_DESCR" />
		<param name="style" type="textarea" rows="10" cols="50" label="AIM_STYLE_LABEL" description="AIM_STYLE_DESCR" />
		<param name="" type="header" default="AIM_LIGHTBOX_PARAMS" label="" description="" />
  		<param name="lightboxEngine" type="list" default="" label="AIM_LIGHTBOXENGINE_LABEL" description="AIM_LIGHTBOXENGINE_DESCR">
  			<option value="">AIM_NONE</option>
  			<option value="arisexylightbox">AIM_ARISEXYLIGHTBOX</option>
  			<option value="aricolorbox">AIM_ARICOLORBOX</option>
  			<option value="arifancybox">AIM_ARIFANCYBOX</option>
  			<option value="ariprettyphoto">AIM_ARIPRETTYPHOTO</option>
  			<option value="ninjashadowbox">AIM_NINJASHADOWBOX</option>
  			<option value="rokbox">AIM_ROKBOX</option>
  			<option value="corejoomlalightbox">AIM_COREJOOMLALIGHTBOX</option>
  		</param>
  		<param name="lightbox_width" type="text" size="5" default="450" label="AIM_LBWIDTH_LABEL" description="AIM_LBWIDTH_DESCR" />
  		<param name="lightbox_height" type="text" size="5" default="300" label="AIM_LBHEIGHT_LABEL" description="AIM_LBHEIGHT_DESCR" />
		<param type="header" default="AIM_SLIDER_PARAMS" label="" description="" />
		<param name="opt_disableClick" type="list" default="0" label="AIM_BLOCKCLICK_LABEL" description="AIM_BLOCKCLICK_DESCR">
  			<option value="0">AIM_NO</option> 
  			<option value="1">AIM_YES</option> 
  		</param>
		<param name="opt_effect" type="list" default="random" label="AIM_EFFECT_LABEL" description="AIM_EFFECT_DESCR">
			<option value="random">AIM_EFFECT_RANDOM</option>
			<option value="sliceDown">AIM_EFFECT_SLICEDOWN</option>
			<option value="sliceDownLeft">AIM_EFFECT_SLICEDOWNLEFT</option>
			<option value="sliceUp">AIM_EFFECT_SLICEUP</option>
			<option value="sliceUpLeft">AIM_EFFECT_SLICEUPLEFT</option>
			<option value="sliceUpDown">AIM_EFFECT_SLICEUPDOWN</option>
			<option value="sliceUpDownLeft">AIM_EFFECT_SLICEUPDOWNLEFT</option>
			<option value="fold">AIM_EFFECT_FOLD</option>
			<option value="fade">AIM_EFFECT_FADE</option>
		</param>
		<param name="opt_slices" type="text" size="5" default="15" label="AIM_SLICES_LABEL" description="AIM_SLICES_DESCR" />
		<param name="opt_animSpeed" type="text" size="5" default="500" label="AIM_ANIMSPEED_LABEL" description="AIM_ANIMSPEED_DESCR" />
		<param name="opt_pauseTime" type="text" size="5" default="3000" label="AIM_PAUSETIME_LABEL" description="AIM_PAUSETIME_DESCR" />
		<param name="opt_startSlide" type="text" size="5" default="0" label="AIM_STARTSLIDE_LABEL" description="AIM_STARTSLIDE_DESCR" />
		<param name="opt_directionNav" type="list" default="1" label="AIM_DIRECTIONNAV_LABEL" description="AIM_DIRECTIONNAV_DESCR">
  			<option value="0">AIM_NO</option> 
  			<option value="1">AIM_YES</option> 
  		</param>
  		<param name="opt_directionNavHide" type="list" default="1" label="AIM_DIRECTIONNAVHIDE_LABEL" description="AIM_DIRECTIONNAVHIDE_DESCR">
  			<option value="0">AIM_NO</option> 
  			<option value="1">AIM_YES</option> 
  		</param>
  		<param name="opt_controlNav" type="list" default="1" label="AIM_CONTROLNAV_LABEL" description="AIM_CONTROLNAV_DESCR">
  			<option value="0">AIM_NO</option> 
  			<option value="1">AIM_YES</option> 
  		</param>
  		<param name="opt_keyboardNav" type="list" default="1" label="AIM_KEYBOARDNAV_LABEL" description="AIM_KEYBOARDNAV_DESCR">
  			<option value="0">AIM_NO</option> 
  			<option value="1">AIM_YES</option> 
  		</param>
  		<param name="opt_pauseOnHover" type="list" default="1" label="AIM_PAUSEONHOVER_LABEL" description="AIM_PAUSEONHOVER_DESCR">
  			<option value="0">AIM_NO</option> 
  			<option value="1">AIM_YES</option> 
  		</param>
  		<param name="opt_manualAdvance" type="list" default="0" label="AIM_MANUALADVANCE_LABEL" description="AIM_MANUALADVANCE_DESCR">
  			<option value="0">AIM_NO</option> 
  			<option value="1">AIM_YES</option> 
  		</param>
  		<param name="opt_captionOpacity" type="text" size="5" default="0.8" label="AIM_CAPTIONOPACITY_LABEL" description="AIM_CAPTIONOPACITY_DESCR" />  		
		<param type="header" default="AIM_SLIDES_PARAMS" label="" description="" />
		<param name="i18n" type="list" default="0" label="AIM_I18N_LABEL" description="AIM_I18N_DESCR">
			<option value="0">AIM_NO</option> 
  			<option value="1">AIM_YES</option> 
  		</param>
		<param name="descrFile" type="text" size="30" default="ariimageslider.ini" label="AIM_DESCRFILE_LABEL" description="AIM_DESCRFILE_DESCR" />
		<param name="defaultDescription" type="text" size="60" default="" label="AIM_DEFDESCR_LABEL" description="AIM_DEFDESCR_DESCR" />
		<param name="imgNumber" type="text" default="0" label="AIM_IMGNUM_LABEL" description="AIM_IMGNUM_DESCR" />
		<param name="sortBy" type="list" default="" label="AIM_SORTBY_LABEL" description="AIM_SORTBY_DESCR">
			<option value="">AIM_NONE</option> 
			<option value="filename">AIM_FILENAME</option> 
			<option value="modified">AIM_MODIFIED</option>
			<option value="random">AIM_RANDOM</option>
		</param>
		<param name="sortDir" type="list" default="asc" label="AIM_SORTDIR_LABEL" description="AIM_SORTDIR_DESCR">
			<option value="asc">AIM_ASC</option> 
			<option value="desc">AIM_DESC</option> 
		</param>
		<param name="subdir" type="list" default="0" label="AIM_SUBDIR_LABEL" description="AIM_SUBDIR_DESCR">
  			<option value="0">AIM_NO</option> 
  			<option value="1">AIM_YES</option> 
  		</param>
		<param name="path" type="textarea" rows="10" cols="50" label="AIM_PATH_LABEL" description="AIM_PATH_DESCR" />
		<param name="imglist_useThumbs" type="list" default="0" label="AIM_USETHUMBS_LABEL" description="AIM_USETHUMBS_DESCR">
  			<option value="0">AIM_NO</option> 
  			<option value="1">AIM_YES</option> 
  		</param>
		<param name="imglist_thumbWidth" type="text" size="6" default="150" label="AIM_THUMBWIDTH_LABEL" description="AIM_THUMBWIDTH_DESCR" />
  		<param name="imglist_thumbHeight" type="text" size="6" default="" label="AIM_THUMBHEIGHT_LABEL" description="AIM_THUMBHEIGHT_DESCR" />
  		<param name="imglist_thumbPath" type="text" size="50" default="" label="AIM_THUMBPATH_LABEL" description="AIM_THUMBPATH_DESCR" />
  		<param name="opt_controlNavThumbs" type="list" default="0" label="AIM_NAVTHUMBS_LABEL" description="AIM_NAVTHUMBS_DESCR">
  			<option value="0">AIM_NO</option> 
  			<option value="1">AIM_YES</option> 
  		</param>
		<param name="imglist_navThumbWidth" type="text" size="6" default="75" label="AIM_NAVTHUMBWIDTH_LABEL" description="AIM_NAVTHUMBWIDTH_DESCR" />
  		<param name="imglist_navThumbHeight" type="text" size="6" default="" label="AIM_NAVTHUMBHEIGHT_LABEL" description="AIM_NAVTHUMBHEIGHT_DESCR" />
  		<param name="imglist_navThumbPath" type="text" size="50" default="" label="AIM_THUMBPATH_LABEL" description="AIM_THUMBPATH_DESCR" />
	</params>
</install>