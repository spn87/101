	<params>
		<param name="catid" type="category" default="0" label="Category" description="A content category which items are used for the YOOslider" />
		<param name="mode" type="list" default="drawer" label="Mode" description="The define the slider behavior.&lt;br&gt;&lt;br&gt;Drawer: Overlapping with z-index, item remains expanded on mouse leave.&lt;br&gt;&lt;br&gt;Slider: Scaling width using overflow: hidden, shrink the item on mouse leave">
			<option value="drawer">Drawer</option>
			<option value="slider">Slider</option>
		</param>
		<param name="style" type="list" default="drawer-v-a" label="Style" description="The YOOslider styling">
			<option value="drawer-v-a">Drawer Vertical Style A</option>
			<option value="slider-h-a">Slider Horizontal Style A</option>
		</param>
		<param name="layout" type="list" default="vertical" label="Layout" description="The layout to display the YOOslider">
			<option value="vertical">Vertical</option>
			<option value="horizontal">Horizontal</option>
		</param>
		<param name="item_size" type="text" default="150" label="Item size (px)" description="Size of a displayed item. When aligned vertical it's the items height. When aligned horizontal it's the items width. " />
		<param name="item_minimized" type="text" default="50" label="Item minimized size (px)" description="Size of a minimized item. Width/Height depending on the alignment." />
		<param name="items" type="text" default="4" label="No. of Items" description="Maximum no of items to display" />
		<param name="module_height" type="text" default="150" label="Module height (px)" description="Module height, only needed for horizontal layout" />
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
	</params>
	<params group="advanced">
		<param name="cache" type="list" default="0" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
		<param name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
	</params>
